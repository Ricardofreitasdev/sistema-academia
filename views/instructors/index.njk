{% extends "layout.njk" %}

{% block content %}

    <div class="card table-container">
    <a class="novo" href="/instructors/create">Cadastrar novo</a>
        <table width="100%">
            <thead>
                <tr>
                    <th>Foto</th>
                    <th>id</th>
                    <th>Instructor</th>
                    <th>Atendimento</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                {% for instructor in instructors %}
                    <tr>
                        <td>
                            <span style="background-image: url({{instructor.avatar_url}})"></span></td>
                        <td>{{instructor.id}}</td>
                        <td>{{instructor.name}}</td>
                        <td>{{instructor.services}}</td>
                        <td>
                            <a href="/instructors/{{instructor.id}}/edit">editar</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock content %}