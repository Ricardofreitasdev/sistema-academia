<div class="item">
    <div>Avatar URL</div>
    <div>
        <input type="url" name="avatar_url" placeholder="http://" value="{{instructor.avatar_url}}">
    </div>
</div>

<div class="item">
    <div>Instrutor</div>
    <div>
        <input type="text" name="name" placeholder="nome do instrutor" value="{{instructor.name}}">
    </div>
</div>

<div class="item">
    <div>Data de nascimento</div>
    <div>
        <input type="date" name="birth" value="{{instructor.birth}}">
    </div>
</div>

<div class="item">
    <div>Sexo</div>
    <label for="M"><input id="M" type="radio" name="gender" value="M" {% if instructor.gender == 'M' %} checked="checked" {% endif %}>Masculino</label>
    <label for="F">
        <input id="F" type="radio" name="gender" value="F" {% if instructor.gender == 'F' %} checked="checked" {% endif %}>Feminino
    </label>
</div>

<div class="item">
    <div>area de atuação</div>
    <div>
        <input type="text" name="services" placeholder="digite os serviços" value="{{instructor.services}}">
    </div>
</div>
<button type="submit">Enviar</button>