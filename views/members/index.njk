{% extends "layout.njk" %}

{% block content %}

    <div class="card table-container">
    <a class="novo" href="/members/create">Cadastrar novo</a>
        <table width="100%">
            <thead>
                <tr>
                    <th>membro</th>
                   
                    <th>member</th>
                    <th>Altura</th>
                    <th>Peso</th>
                    <th>ação</th>

                </tr>
            </thead>
            <tbody>
                {% for member in members %}
                    <tr>
                        <td>
                            <span style="background-image: url({{member.avatar_url}})"></span>{{member.name}}</td>
                        <td>{{member.email}}</td>
                        <td>{{member.height}} cm</td>
                        <td>{{member.weight}} Kg</td>

                        <td>
                            <a href="/members/{{member.id}}/edit">editar</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock content %}