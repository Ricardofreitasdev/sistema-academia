<div class="item">
    <div>Avatar URL</div>
    <div>
        <input type="url" name="avatar_url" placeholder="http://" value="{{member.avatar_url}}">
    </div>
</div>

<div class="item">
    <div>Nome</div>
    <div>
        <input type="text" name="name" placeholder="nome do membro" value="{{member.name}}">
    </div>
</div>

<div class="item">
    <div>email</div>
    <div>
        <input type="email" name="email" placeholder="email" value="{{member.email}}">
    </div>
</div>

<div class="item">
    <div>Data de nascimento</div>
    <div>
        <input type="date" name="birth" value="{{member.birth}}">
    </div>
</div>

<div class="item">
    <div>Sexo</div>
    <label for="M"><input id="M" type="radio" name="gender" value="M" {% if member.gender == 'M' %} checked="checked" {% endif %}>Masculino</label>
    <label for="F">
        <input id="F" type="radio" name="gender" value="F" {% if member.gender == 'F' %} checked="checked" {% endif %}>Feminino
    </label>
</div>

<div class="item">
    <div>Tipo sanguineo</div>
    <div>
        <select name="blood">
            <option value="A+" {%if member.blood == "A+" %} selected="selected" {% endif %}>A</option>
            <option value="A-" {%if member.blood == "A-" %} selected="selected" {% endif %}>B</option>
            <option value="AB" {%if member.blood == "AB" %} selected="selected" {% endif %}>AB</option>
            <option value="O" {%if member.blood == "O" %} selected="selected" {% endif %}>O</option>
        </select>
    </div>
</div>

<div class="item">
    <div>Peso em KG</div>
    <div>
        <input type="number" name="weight" value="{{member.weight}}">
    </div>
</div>

<div class="item">
    <div>Altura em cm</div>
    <div>
        <input type="number" name="height" value="{{member.height}}">
    </div>
</div>

<button type="submit">Enviar</button>